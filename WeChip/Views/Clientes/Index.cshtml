@model IEnumerable<WeChip.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}
<div class="float-right">
    <a asp-action="Create" class="btn btn-gray-dark">Cadastrar cliente</a>
</div>
<form asp-controller="Clientes" asp-action="Index">
    <div class="row">
        <div class="col-4 pr-1">
            <input type="text" name="filtro" id="filtro" class="form-control mb-2 mr-sm-2 search" placeholder="Pesquisar cliente" />
        </div>
        <div class="col-8 pl-1">
            <button class="btn btn-gray-dark mb-2" id="pesquisar">Pesquisar</button>
        </div>
    </div>
</form>
<h5 class="text-center mb-3 mt-3">Lista de clientes</h5>
<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td class="cpf">
                        @Html.DisplayFor(modelItem => item.Cpf)
                    </td>
                    <td class="money2">
                        @Html.DisplayFor(modelItem => item.Credito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        <a asp-action="Create" asp-controller="Ofertas" asp-route-id="@item.ID" class="btn btn-secondary">Ofertar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Nenhum cliente encontrado.</td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}